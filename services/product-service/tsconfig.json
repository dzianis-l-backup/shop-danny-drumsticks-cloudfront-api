{
  "extends": "./tsconfig.paths.json",
  "increment": true,
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib"
  },
  "include": [
    "src/**/*.ts",
    "serverless.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "swagger/**",
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}